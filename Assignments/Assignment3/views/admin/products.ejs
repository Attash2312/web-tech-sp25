<%- contentFor('body') %>
<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <h1>Product Management</h1>
                <div>
                    <a href="/admin/orders" class="btn btn-info me-2">
                        <i class="fas fa-list"></i> Manage Orders
                    </a>
                    <a href="/admin/complaints" class="btn btn-warning me-2">
                        <i class="fas fa-exclamation-triangle"></i> Manage Complaints
                    </a>
                    <a href="/admin/products/add" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add Product
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Description</th>
                    <th>Category</th>
                    <th>Image</th>
                    <th>Available</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% if (products && products.length > 0) { %>
                    <% products.forEach(product => { %>
                        <tr>
                            <td><%= product.name %></td>
                            <td>$<%= product.price %></td>
                            <td><%= product.description %></td>
                            <td><%= product.category %></td>
                            <td><img src="<%= product.image %>" alt="<%= product.name %>" width="80" class="img-thumbnail"></td>
                            <td><span class="badge <%= product.isAvailable ? 'bg-success' : 'bg-danger' %>"><%= product.isAvailable ? 'Yes' : 'No' %></span></td>
                            <td>
                                <a href="/admin/products/edit/<%= product._id %>" class="btn btn-sm btn-warning">Edit</a>
                                <form action="/admin/products/delete/<%= product._id %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this product?')">Delete</button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="7" class="text-center">No products found</td>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
</div> 