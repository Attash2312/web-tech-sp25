<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB41DRUbKWJHPxaFjMAwdrzWzbVKartNGg&callback=initMap" async defer></script>
<script>
function initMap() {
    const defaultLocation = { lat: 31.5204, lng: 74.3587 }; // Lahore coordinates
    
    const map = new google.maps.Map(document.getElementById("map"), {
        zoom: 12,
        center: defaultLocation,
    });

    const circle = new google.maps.Circle({
        strokeColor: "#FF0000",
        strokeOpacity: 0.8,
        strokeWeight: 2,
        fillColor: "#FF0000",
        fillOpacity: 0.35,
        map,
        center: defaultLocation,
        radius: 5000, // 5km default
    });

    // Add markers for sample locations
    const locations = [
        { lat: 31.5204, lng: 74.3587, title: "McDonald's Gulberg" },
        { lat: 31.5154, lng: 74.3457, title: "McDonald's Liberty" },
        { lat: 31.5254, lng: 74.3687, title: "McDonald's MM Alam" }
    ];

    locations.forEach(location => {
        new google.maps.Marker({
            position: { lat: location.lat, lng: location.lng },
            map: map,
            title: location.title
        });
    });

    // Update radius when dropdown item is selected
    document.querySelectorAll('.dropdown-item').forEach(item => {
        item.addEventListener('click', function(e) {
            e.preventDefault();
            const radius = parseInt(this.dataset.radius) * 1000;
            circle.setRadius(radius);
            document.getElementById('radiusDropdown').textContent = this.textContent;
            
            // Update active state
            document.querySelectorAll('.dropdown-item').forEach(i => i.classList.remove('active'));
            this.classList.add('active');
        });
    });
}
</script> 